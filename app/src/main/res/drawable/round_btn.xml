<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger circle in white-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <padding android:top="5dp" android:bottom="5dp" android:right="5dp" android:left="5dp"/>
            <solid
                android:width="1dp"
                android:color="#9E9E9E"/>
        </shape>
    </item>
    <!-- Smaller white circle in front -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="#EDEDED"/>
        </shape>
    </item>
</layer-list>

    <!-- Credits: https://stackoverflow.com/questions/43322581/create-circle-inside-another-circle-in-android -->